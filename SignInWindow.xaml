<Window x:Class="SpecklePopup.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecklePopup"
        mc:Ignorable="d"
        Title="Speckle SignIn" Height="524" Width="500" MinWidth="500" MinHeight="400" HorizontalAlignment="Center" AutomationProperties.Name="Speckle SignIn">
  <Grid Margin="0">
    <Button Content="Sign In" Click="Button_Click" HorizontalAlignment="Center" Margin="48,423,48,0" VerticalAlignment="Top" Width="396" Height="46" FontSize="16" Background="#FF0074FF" Foreground="White" BorderBrush="#00707070"/>
    <TextBox HorizontalAlignment="Center" Height="24" Margin="48,394,48,0" TextWrapping="Wrap" Text="Server Url" VerticalAlignment="Top" Width="396" FontSize="16" TextAlignment="Center"/>
    <ListBox
      x:Name="AccountListBox"
      Width="396"
      Height="208"
      Margin="0,85,0,0"
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      ItemsSource="{Binding}"
      MouseDoubleClick="AccountListBox_MouseDoubleClick"
      SelectedIndex="0" BorderBrush="#00ABADB3">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel>
            <TextBlock FontSize="14" Text="{Binding RestApi}" />
            <TextBlock
              FontSize="10"
              Foreground="DimGray"
              Text="{Binding Email}" />
            <TextBlock
              FontSize="10"
              Foreground="DimGray"
              Text="----------------" />
            <StackPanel Orientation="Horizontal">
              <TextBlock
                FontSize="10"
                Foreground="DimGray"
                Text="{Binding ServerName}" />
              <RadioButton
                Margin="5,0"
                VerticalAlignment="Center"
                Click="RadioButton_Click"
                Content="default"
                FontSize="10"
                Foreground="DimGray"
                GroupName="IsDefault"
                IsChecked="{Binding IsDefault}" />
            </StackPanel>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <Label Content="Existing Accounts" HorizontalAlignment="Center" Margin="48,32,48,0" VerticalAlignment="Top" Width="396" FontSize="22"/>
    <Label Content="New Account" HorizontalAlignment="Center" Margin="48,338,48,0" VerticalAlignment="Top" Width="396" FontSize="22"/>

  </Grid>
</Window>
